@model CustomerListView
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Customer";
}

<div class="container-xxl py-5 bg-dark hero-header mb-5">
    <div class="container text-center my-5 pt-5 pb-4">
        <h1 class="display-3 text-white mb-3 animated slideInDown">Food Menu</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center text-uppercase">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item text-white active" asp-action="Index" aria-current="page">Customer</li>
            </ol>
        </nav>
    </div>
</div>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="btn-close"
                data-bs-dismiss="alert" arial-label="Close"></button>
        @TempData["Message"]
    </div>
}
<p>
    <a class="btn btn-outline-warning"  asp-action="Add">Add New Customer</a>
</p>

@* Sorting & searching form, uses a get to retrieve data *@
<form asp-controller="Customer" asp-action="Index" method="get">
    <div>
        <p>
           @*  uses input html attributes *@
            Find Customer:
            <input type="text" name="SearchString"
                   value="@ViewData["CurrentFilter"]"/>
            
            <input type="submit" value="Search" class="btn btn-warning"/>
            <a class="btn btn-outline-danger" asp-action="Index">Cancel</a>
        </p>
    </div>

</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                <a asp-controller="Customer" asp-action="Index"
                asp-route-sortBy="@ViewData["NameSortParam"]"
                asp-route-searchString="@ViewData["CurrentFilter"]">
                Last Name
              </a>
            </th>
            <th>First Name</th>
            <th>
                <a asp-controller="Customer" asp-action="Index"
                   asp-route-sortBy="@ViewData["DateSortParam"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">
                   Reservation date
                </a>
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var customer in Model.Customer){
          <tr>
              <td>@customer.CustomerLastName</td>
              <td>@customer.CustomerFirstName</td>
              <td>@customer.Registration.ToShortDateString()</td> @* important to specify the type of date format *@
              <td><a class="btn btn-warning btn-outline-light" asp-action="Edit" asp-route-id="@customer.CustomerID">Edit</a></td>
              <td><a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="@customer.CustomerID">Details</a></td>
              <td><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@customer.CustomerID">Delete</a></td>

          </tr>
        }
    </tbody>
</table>

@*   Important for adding the count per page *@
<div page-model="@Model.PageInfo" asp-controller="Customer" page-action="Index"
     page-searchString="@ViewData["CurrentFilter"]"
     page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-light"
     page-class-selected="btn-warning" class="btn-group pull-right m-1">

</div>
