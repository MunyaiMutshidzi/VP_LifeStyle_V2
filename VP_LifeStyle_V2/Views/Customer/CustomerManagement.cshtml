@model Customer
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = ViewBag.Action + "Customer";
}

<div class="container-xxl py-5 bg-dark hero-header mb-5">
    <div class="container text-center my-5 pt-5 pb-4">
        <h1 class="display-3 text-white mb-3 animated slideInDown">About Us</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center text-uppercase">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Pages</a></li>
                <li class="breadcrumb-item text-white active" aria-current="page">Add new Customer</li>
            </ol>
        </nav>
    </div>
</div>

<div class="d-flex justify-content-center align-items-center bg-dark vh-100">
    <div class="col-md-6 p-5 bg-dark rounded shadow-lg wow fadeInUp" data-wow-delay="0.2s">
        <h1 class="text-white mb-4">@ViewBag.Action Online</h1>
        <form asp-action="CustomerManagement" method="post">
            @* Validate all the input fields automatically  based on the model requirements*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.CustomerID" />
            <input  type="hidden" asp-for="@Model.Registration"/>
            @* During form submission, the value of ProductID will be sent to the server along with other form data *@
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="CustomerFirstName" type="text" class="form-control" placeholder="First Name">
                        <label asp-for="CustomerFirstName" class="form-label"></label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="CustomerLastName" type="text" class="form-control" placeholder="Last Name">
                        <label asp-for="CustomerLastName" class="form-label"></label>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="CustomerEmail" class="form-control" type="email" placeholder="Email Address">
                        <label asp-for="CustomerEmail" class="form-label"></label>
                    </div>
                </div>
                @* Adding a Radio button & password *@
                
                @* Adding a textarea *@
                <div class="col-12">
                    @* Always send the button type to submit, for the data to be sent to the server *@
                    <button type="submit" class="btn btn-primary w-100 py-3">@ViewBag.Action</button>
                    <a class="btn btn-secondary w-100 py-3 mt-2" asp-controller="Customer" asp-action="Index">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>