@model Customer
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = Model.CustomerLastName + " Details";
}

<div class="container-xxl py-5 bg-dark hero-header mb-5">
    <div class="container text-center my-5 pt-5 pb-4">
        <h1 class="display-3 text-white mb-3 animated slideInDown">Customers</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center text-uppercase">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item text-white active" aria-current="page">Customer Details</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h1 class="mb-5">Explore Customer Details</h1>
        </div>

        <div>
            <div>
                <h2>@Model.CustomerLastName @Model.CustomerFirstName</h2>
                @* Adding table *@
                <partial name="_CustomerDetails" model="@Model"></partial>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Table Type</th>
                            <th>Product</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Reservations)
                        {
                            <tr>
                                <td>@item.TableType.ToString()</td>
                                <td>@item.Product.ProductName.ToString()</td>
                                <td>@item.Product.Price.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="mt-3">
                    <a asp-controller="Customer" asp-action="Edit" asp-route-id="@Model.CustomerID" class="btn btn-warning">Update</a>
                    <a asp-controller="Customer" asp-action="Delete" asp-route-id="@Model.CustomerID" class="btn btn-outline-danger">Delete</a>
                    <a asp-action="Index" class="btn btn-outline-warning">Return</a>
                </div>
            </div>
        </div>
    </div>
</div>
